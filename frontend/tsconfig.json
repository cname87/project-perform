{
  "extends": "../tsconfig.json",
  "exclude": [
    "node_modules",
  ],

  "compilerOptions": {

    /* list directory options first */
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "rootDir": ".",

    /* target and lib */
    "target": "es5",  // Compiles to this JS version - higher for better debug support, lower for wider browser support
    "lib": [
      "es2018",
      "dom"
    ], // for browser-side scripts - extra types which you know browser will support

    /* module option */
    "module": "es2015",  // module loader format (independent of target) - es2015 for angular
  }
}
