{
  "extends": "../../../tsconfig.json",
  "include": [
    "./**/*.ts",
  ],
  "exclude": [],
  "compilerOptions": {
    // list directory options first
    "outDir": "../../../dist/",  // overlays on dist/
    "lib": [
      "dom", // needed so 'fetch' etc allowed in client-side scripts
      "esnext", // telling compiler that browser support esnext types
    ],
    "module": "esnext",  // for browser
    "target": "esnext",  // es5 for wider browser support
  },
}
